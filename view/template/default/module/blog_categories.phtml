                                <?php if ($blog_categories_post_count): ?> (<?php echo $child['posts']; ?>) <?php endif; ?></li>
                            <?php endforeach; ?>
                    </ul>
                <?php endif; ?>
            </li>
        <?php endforeach; ?>
    </ul>

</div>
